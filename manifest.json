{
    "manifest_version": 2,
    "name": "Timely",
    "description": "Tracks the amount of time spent on specific websites",
    "version": "1.0.0",
    "permissions": ["tabs", "activeTab", "background"],

    "content_scripts": [
        {
            "matches": [ "<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background":{
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Timely"
    }
}